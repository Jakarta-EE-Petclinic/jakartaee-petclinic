<arquillian xmlns="http://jboss.org/schema/arquillian"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://jboss.org/schema/arquillian
            http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <defaultProtocol type="Servlet 3.0" />

    <extension qualifier="webdriver">
        <property name="browser">chrome</property>
    </extension>

    <extension qualifier="drone">
        <property name="instantiationTimeoutInSeconds">300</property>
    </extension>

    <container qualifier="jboss" default="true">
        <configuration>
            <property name="jbossHome">target/wildfly-17.0.1.Final</property>
        </configuration>
    </container>

    <container qualifier="it-wildfly-managed">
        <configuration>
            <property name="jbossHome">target/wildfly-17.0.1.Final</property>
        </configuration>
    </container>

    <container qualifier="it-openliberty-managed">
        <configuration>
            <property name="openlibertyHome">target/wlp</property>
        </configuration>
    </container>

</arquillian>
