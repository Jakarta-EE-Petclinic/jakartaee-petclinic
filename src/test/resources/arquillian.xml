<arquillian xmlns="http://jboss.org/schema/arquillian"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://jboss.org/schema/arquillian
            http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <defaultProtocol type="Servlet 3.0" />

    <engine>
        <property name="deploymentExportPath">target/</property>
    </engine>

    <extension qualifier="webdriver">
        <property name="browser">${webdriver.browser}</property>
    </extension>

    <extension qualifier="drone">
        <property name="instantiationTimeoutInSeconds">300</property>
    </extension>

    <container qualifier="it-openliberty-remote">
        <configuration>
            <property name="wlpHome">${openlibertyHome}</property>
        </configuration>
    </container>

    <container qualifier="arquillian-liberty-managed">
        <configuration>
            <property name="wlpHome">${project.build.directory}/liberty/wlp/</property>
            <property name="deployType">apps</property>
            <property name="serverName">defaultServer</property>
            <property name="appDeployTimeout">300</property>
            <property name="appUndeployTimeout">200</property>
        </configuration>
    </container>

    <container qualifier="it-wildfly-managed">
        <configuration>
            <property name="jbossHome">${jboss.home}</property>
        </configuration>
    </container>

    <container qualifier="it-wildfly-remote">
        <configuration>
            <property name="jbossHome">${jboss.home}</property>
        </configuration>
    </container>

</arquillian>
